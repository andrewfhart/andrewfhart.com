  padding-bottom:0px
  
// -- READING, NEWS ----------------------------------------------
#reading ul, #news ul 
  font-size 90%
  list-style none
  
#reading ul li, #news ul li
  line-height 1.1em
  margin-bottom 12px;
  
#reading ul li a, #news ul li a
  color #005580
  
// -- NEWS -------------------------------------

#news ul li p
  margin-top:10px
  line-height:1.5em
  
// -- PHOTOS ------------------------------------------------
#photos
  height 410px
  
#photos ul
  margin-right 0px

// -- SOCIAL ------------------------------------------------
#social img
  margin-right 10px
#social a
  text-decoration none
  
// -- PROJECTS ---------------------------------
#projects
  font-size:90%
  
#projects p
  text-indent 0px
  text-align left
  line-height 1.5em
  
#projects span
  font-size: 1.1em
  display:block;
  margin-top 20px
  
#projects img
  width:90px
  float:left
  margin-right 10px
  margin-bottom 10px
  padding 3px
  border solid 1px #ccc
  border-radius 2px


// -- STREME ------------------------------------------------

ul.streme 
  font-size 90%
  list-style none
  margin 0
  padding 0

ul.streme li 
  margin-bottom 10px  

ul.streme li img 
  width 40px
  padding 2px
  border solid 1px #ccc
  float left
  margin 2px
  margin-right 5px
  
ul.streme li span.description
  font-style italic
  
ul.streme span.date, ul.streme span.verb
  color #888
  
ul.streme.small li
  font-size 80%
  line-height 1.35em
  margin-bottom 5px
  
  
ul.streme.small li img 
  width 28px
  
// -- RESUME (CV) -------------------------------------------
#cv img
  width 80px
  float left
  margin-right:8px

#cv
  font-size:100%
  
#cv p
  text-indent 0px

