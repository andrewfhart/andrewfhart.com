/*********************************************************
 * UTILITY FUNCTIONS
 *********************************************************/
 
vendor(prop, args)
  -webkit-{prop} args
  -moz-{prop} args
  {prop} args
 
border-radius()
  vendor('border-radius', arguments)

box-shadow()
  vendor('box-shadow', arguments)
  



/*********************************************************
 * SITE STYLES
 *********************************************************/

body
  padding 20px
  font 13px "PT Sans", "Lucida Grande", Helvetica, Arial, sans-serif
  background url(../images/low_contrast_linen.png) scroll left top repeat
  background-color:#343434
  color:#eee;
  
a
  //color #593
  //color #336533
  color #005580

ul.iconified
  list-style none
  margin-left 0px

ul.iconified li i
  margin-right 15px
  margin-top 1px
  
ul.iconified li a
  font-size 1.15em
  
div.span4 div.box .thumbnails
  padding-left 5px

div.span4 div.box .thumbnails li
  margin-left 6px

div.footer
  font-size:90%
  color:#bcbcvc

div.footer p
  line-height:1.1em
  
.breadcrumb
  color:#656565
  
.clear
  clear:both
 
// -- BOXES -----------------------------------------------

.box 
  position:relative
  background-color #f3f3f3
  padding 10px
  margin 10px 0px
  color:#303030
  border-radius:8px
  line-height:20px;
  min-height:242px

div.box.short
  min-height:130px
  height:130px 

.box p
  text-indent:15px
  text-align:justify
  
.box ul li 
  line-height 2em
  
.shadow
  box-shadow 1px 1px 3px 1px #181818
  
div.box p.attrib
  position:absolute;
  bottom:-15px;
  right:10px;
  
div.box p.attrib img 
  margin-bottom:15px
  
div.box#briefHistory img, div.box#oldHistory img
  max-height:54px
  padding:5px
  border:solid 1px #ccc
  margin-left:10px
  margin-bottom:10px
  float:right
  
div.box#briefHistory p:after, div.box#oldHistory p:after 
  content: "."
  display: block
  clear: both
  visibility: hidden
  line-height: 0
  height: 0
  
div.box ul
  margin-left:0px
  
div.box ul li a
  color:#005580
  
div.box#social
  margin-top:20px
  
div.box#cv
  margin-top:20px
  
div.box .well
  margin-bottom 0px
  
.footer.container a
  color #bbb
  text-decoration underline
  
.box.auto
  min-height 0px
  height auto
  
// -- FEATURES -------------------------------------------- 
  
div#features ul.iconified li
  line-height 4em

div#features div.span2
  margin-left:0px

div#features div.span2.last 
  margin-left -18px
  width 118px

#timeline
  height 100px
  background-color #345

  


  
// -- HEADERS ----------------------------------------------
  
