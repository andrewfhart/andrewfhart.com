  font-family montserrat, sans-serif
  text-transform uppercase
  font-size 3em
  //color #ced7d3
  color #7f3f3f
  text-shadow 1px 1px 3px #251313;
  filter dropshadow(color=#FFFFFF, offx=1, offy=1);


h3
  font-family:economica, sans-serif
  letter-spacing 0.05em
  border-bottom solid 1px #7f3f3f
  margin-bottom 8px
  //color:#251313;
  color:#1a1f0f;
  
div.header h5
  letter-spacing:0.04em;
  margin-top:3px;
  
div.header hr
  margin-top 3px
  border-width:1px 0
  
.num 
  font-size 150%
  color #347
  
// -- HELLO ------------------------------------------------
